<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

	<default name="spp" value="512"/>
	<default name="resx" value="256"/>
	<default name="resy" value="256"/>
	<default name="max_depth" value="12"/>
    <default name="integrator" value="path"/>
    <default name="sample_border" value="true"/>

<!-- Camera and Rendering Parameters -->

	<integrator type='$integrator'>
		<integer name="max_depth" value="$max_depth"/>
	</integrator>
	<sensor type="perspective">
		<string name="fov_axis" value="x"/>
		<float name="fov" value="12.680384"/>
		<float name="principal_point_offset_x" value="0.000000"/>
		<float name="principal_point_offset_y" value="-0.000000"/>
		<float name="near_clip" value="0.100000"/>
		<float name="far_clip" value="1000.000000"/>
		<transform name="to_world">
			<rotate x="1" angle="89.999995674289"/>
			<rotate y="1" angle="90.00000250447816"/>
			<translate value="-0.219877 0.178972 -0.269240"/>
		</transform>
		<sampler type="independent">
			<integer name="sample_count" value="$spp"/>
		</sampler>
		<film type="hdrfilm">
			<integer name="width" value="$resx"/>
			<integer name="height" value="$resy"/>
			<boolean name="sample_border" value="$sample_border"/>
		</film>
	</sensor>

<!-- Materials -->

	<bsdf type="twosided" id="mat-floor">
		<bsdf type="diffuse">
			<rgb value="0.800656 0.800656 0.800656" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-material-holder-bsdf">
		<bsdf type="diffuse">
			<rgb value="0.800000 0.800000 0.800000" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-material-bsdf">
		<bsdf type="principled">
			<texture name="base_color" type="bitmap">
				<string name="filename" value="scenes\texture-scanner\textures\init-texture-512.png"/>
			</texture>
			<float name="spec_tint" value="0.000000"/>
			<float name="spec_trans" value="0.000000"/>
			<float name="metallic" value="0.000000"/>
			<float name="anisotropic" value="0.000000"/>
			<float name="roughness" value="0.500000"/>
			<float name="sheen" value="0.000000"/>
			<float name="sheen_tint" value="0.500000"/>
			<float name="clearcoat" value="0.000000"/>
			<float name="clearcoat_gloss" value="0.173205"/>
			<float name="specular" value="0.500000"/>
		</bsdf>
	</bsdf>
	<bsdf type="diffuse" id="empty-emitter-bsdf">
		<rgb value="0.000000" name="reflectance"/>
	</bsdf>

<!-- Emitters -->

	<shape type="ply">
		<string name="filename" value="meshes/top-light-4.ply"/>
		<ref id="empty-emitter-bsdf" name="bsdf"/>
		<emitter type="area">
			<rgb value="50.000000 50.000000 50.000000" name="radiance"/>
		</emitter>
	</shape>
	<shape type="ply">
		<string name="filename" value="meshes/top-light-1.ply"/>
		<ref id="empty-emitter-bsdf" name="bsdf"/>
		<emitter type="area">
			<rgb value="50.000000 50.000000 50.000000" name="radiance"/>
		</emitter>
	</shape>
	<shape type="ply">
		<string name="filename" value="meshes/top-light-3.ply"/>
		<ref id="empty-emitter-bsdf" name="bsdf"/>
		<emitter type="area">
			<rgb value="50.000000 50.000000 50.000000" name="radiance"/>
		</emitter>
	</shape>
	<shape type="ply">
		<string name="filename" value="meshes/top-light-2.ply"/>
		<ref id="empty-emitter-bsdf" name="bsdf"/>
		<emitter type="area">
			<rgb value="50.000000 50.000000 50.000000" name="radiance"/>
		</emitter>
	</shape>

<!-- Shapes -->

	<shape type="ply">
		<string name="filename" value="meshes/bottom-plate.ply"/>
		<ref id="mat-floor" name="bsdf"/>
	</shape>
	<shape type="ply">
		<string name="filename" value="meshes/cylinder-mat-holder.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-material-holder-bsdf" name="bsdf"/>
	</shape>
	<shape type="ply">
		<string name="filename" value="meshes/cube-plate.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-material-bsdf" name="bsdf"/>
	</shape>

</scene>
