<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

<default name="spp" value="512"/>
<default name="resx" value="256"/>
<default name="resy" value="256"/>
<default name="integrator" value="prb_reparam" />
<default name="sample_border" value="true"/>

<!-- Camera and Rendering Parameters -->

<integrator type="$integrator">
	<integer name="max_depth" value="12"/>
</integrator>
<sensor type="perspective">
	<string name="fov_axis" value="x"/>
	<float name="fov" value="14.987889"/>
	<float name="principal_point_offset_x" value="0.000000"/>
	<float name="principal_point_offset_y" value="-0.000000"/>
	<float name="near_clip" value="0.100000"/>
	<float name="far_clip" value="1000.000000"/>
	<transform name="to_world">
		<rotate x="1" angle="-148.7433244989288"/>
		<rotate y="1" angle="69.91285328757755"/>
		<rotate z="1" angle="-159.14316177448697"/>
		<translate value="-9.494224 2.004364 12.973854"/>
	</transform>
	<sampler type="independent">
		<integer name="sample_count" value="$spp"/>
	</sampler>
	<film type="hdrfilm">
		<integer name="width" value="$resx"/>
		<integer name="height" value="$resy"/><boolean name="sample_border" value="$sample_border"/>
	</film>
</sensor>

<!-- Materials -->

<bsdf type="twosided" id="mat-Shape">
	<bsdf type="principled">
		<!-- <texture type="bitmap" name="base_color">
			<string name="filename" value="scenes\metashape\textures\init-texture-128.png"/>
		</texture> -->
		<texture type="mesh_attribute" name="base_color">
			<string name="name" value="vertex_color"/>
		</texture>
		<float name="roughness" value="0.500000"/>
	</bsdf>
</bsdf>

<!-- Emitters -->
<emitter type="constant"></emitter>

<!-- Shapes -->

	<shape type="ply" id="bunny_rec">
		<string name="filename" value="meshes/icosphere_vc.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-Shape" name="bsdf"/>
	</shape>
</scene>
