<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

	<default name="spp" value="1024"/>
	<default name="resx" value="512"/>
	<default name="resy" value="512"/>

<!-- Camera and Rendering Parameters -->

	<integrator type="path">
		<integer name="max_depth" value="12"/>
	</integrator>
	<sensor type="perspective">
		<string name="fov_axis" value="x"/>
		<float name="fov" value="19.999999"/>
		<float name="principal_point_offset_x" value="0.000000"/>
		<float name="principal_point_offset_y" value="-0.000000"/>
		<float name="near_clip" value="0.100000"/>
		<float name="far_clip" value="1000.000000"/>
		<transform name="to_world">
			<rotate x="1" angle="89.999995674289"/>
			<rotate y="1" angle="90.00000250447816"/>
			<translate value="-0.214875 0.419517 -0.242954"/>
		</transform>
		<sampler type="independent">
			<integer name="sample_count" value="$spp"/>
		</sampler>
		<film type="hdrfilm">
			<integer name="width" value="$resx"/>
			<integer name="height" value="$resy"/>
		</film>
	</sensor>
	<sensor type="perspective">
		<string name="fov_axis" value="x"/>
		<float name="fov" value="61.927515"/>
		<float name="principal_point_offset_x" value="0.000000"/>
		<float name="principal_point_offset_y" value="-0.000000"/>
		<float name="near_clip" value="0.100000"/>
		<float name="far_clip" value="1000.000000"/>
		<transform name="to_world">
			<rotate x="1" angle="31.866510534977536"/>
			<rotate y="1" angle="0.48683288551091297"/>
			<rotate z="1" angle="-2.728390336395695e-06"/>
			<translate value="-0.182229 0.801351 -1.485163"/>
		</transform>
		<sampler type="independent">
			<integer name="sample_count" value="$spp"/>
		</sampler>
		<film type="hdrfilm">
			<integer name="width" value="$resx"/>
			<integer name="height" value="$resy"/>
		</film>
	</sensor>

<!-- Materials -->

	<bsdf type="twosided" id="mat-floor">
		<bsdf type="diffuse">
			<rgb value="0.800656 0.800656 0.800656" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="principled" id="mat-Cube-BSDF">
		<rgb name="base_color" value="0.412, 0.824, 0.999"/>
		<float name="roughness" value="0.005"/>
		<float name="spec_trans" value="0.98"/>
		<float name="eta" value="1.49"/>
	</bsdf>
	<bsdf type="diffuse" id="empty-emitter-bsdf">
		<rgb value="0.000000" name="reflectance"/>
	</bsdf>


<!-- Emitters -->

	<shape type="ply">
		<string name="filename" value="meshes/top-light-1.ply"/>
		<ref id="empty-emitter-bsdf" name="bsdf"/>
		<emitter type="area">
			<rgb value="10.000000 10.000000 10.000000" name="radiance"/>
		</emitter>
	</shape>
	<shape type="ply">
		<string name="filename" value="meshes/top-light-2.ply"/>
		<ref id="empty-emitter-bsdf" name="bsdf"/>
		<emitter type="area">
			<rgb value="10.000000 10.000000 10.000000" name="radiance"/>
		</emitter>
	</shape>

<!-- Shapes -->

	<shape type="ply">
		<string name="filename" value="meshes/bottom-plate.ply"/>
		<ref id="mat-floor" name="bsdf"/>
	</shape>
	<shape type="ply">
		<string name="filename" value="meshes/Cube.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-Cube-BSDF" name="bsdf"/>
	</shape>

</scene>
