<emitter type="envmap" id="emitter-envmap">
	<string name="filename" value="images/OfficeEnvironment.jpg" />
	<transform name="to_world">
		<rotate x="1" angle="-28.36574488721169"/>
		<rotate y="1" angle="5.872400280438326"/>
