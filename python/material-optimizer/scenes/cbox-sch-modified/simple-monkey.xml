<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

	<default name="spp" value="4096"/>
	<default name="resx" value="512"/>
	<default name="resy" value="512"/>
	<default name="integrator" value="path" />
	
	<!-- Camera and Rendering Parameters -->

	<integrator type="$integrator">
		<integer name="max_depth" value="12"/>
	</integrator>
	<sensor type="perspective">
		<string name="fov_axis" value="x"/>
		<float name="fov" value="63.654891"/>
		<float name="principal_point_offset_x" value="0.000000"/>
		<float name="principal_point_offset_y" value="-0.000000"/>
		<float name="near_clip" value="0.100000"/>
		<float name="far_clip" value="100.000000"/>
		<transform name="to_world">
			<rotate x="1" angle="-1.6164856812624166e-05"/>
			<rotate y="1" angle="0.00010928302020642803"/>
			<rotate z="1" angle="-1.55520442624411e-11"/>
			<translate value="-0.000002 -0.000001 -2.999999"/>
		</transform>
		<sampler type="independent">
			<integer name="sample_count" value="$spp"/>
		</sampler>
		<film type="hdrfilm">
			<integer name="width" value="$resx"/>
			<integer name="height" value="$resy"/>
		</film>
	</sensor>

<!-- Materials -->

	<bsdf type="twosided" id="default-bsdf">
		<bsdf type="diffuse"/>
	</bsdf>
	<bsdf type="twosided" id="mat-Material">
		<bsdf type="diffuse">
			<rgb value="0.800000 0.219544 0.253530" name="reflectance"/>
		</bsdf>
	</bsdf>

<!-- Emitters -->

	<shape type="rectangle">
		<boolean name="flip_normals" value="true"/>
		<transform name="to_world">
			<matrix value="4.062242 0.000000 0.000000 0.000000 0.000000 0.000000 4.062242 6.386348 0.000000 -4.062242 0.000000 0.000000 0.000000 0.000000 0.000000 1.000000"/>
		</transform>
		<emitter type="area">
			<rgb value="3.787464 3.787464 3.787464" name="radiance"/>
		</emitter>
		<bsdf type="null"/>
	</shape>

<!-- Shapes -->

	<shape type="ply">
		<string name="filename" value="meshes/Plane.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="default-bsdf" name="bsdf"/>
	</shape>
	<shape type="ply">
		<string name="filename" value="meshes/Suzanne.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-Material" name="bsdf"/>
	</shape>
</scene>
